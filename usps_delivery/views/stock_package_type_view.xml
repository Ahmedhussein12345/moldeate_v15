<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_package_type_delivery_form" model="ir.ui.view">
        <field name="name">stock.package.type.form.delivery</field>
        <field name="model">stock.package.type</field>
        <field name="inherit_id" ref="stock.stock_package_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='size']" position="after">
                <label for="girth"/>
                <div class="o_row" name="girth">
                    <field name="girth" attrs="{'invisible': [('package_carrier_type','!=', 'usps_ts')]}"/>
                    <span>
                        <field name="length_uom_name"/>
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>