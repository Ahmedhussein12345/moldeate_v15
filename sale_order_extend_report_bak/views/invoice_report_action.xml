<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_report_invoice_order" model="report.paperformat">
        <field name="name">Invoice (Domestic)</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">45</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_custom_report_invoice_order" model="ir.actions.report">
        <field name="name">Invoice (Domestic)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale_order_extend_report.action_report_invoice_order</field>
        <field name="report_file">sale_order_extend_report.action_report_invoice_order</field>
        <field name="print_report_name">('Domestic Invoice - %s' % (object.name)) or 'Invoice - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="paperformat_id" ref="sale_order_extend_report.paperformat_report_invoice_order"/>
        <field name="binding_type">report</field>
    </record>

    <record id="new_action_international_custom_report_invoice_order" model="ir.actions.report">
        <field name="name">Invoice (International)</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale_order_extend_report.action_international_report_invoice</field>
        <field name="report_file">sale_order_extend_report.action_international_report_invoice</field>
        <field name="print_report_name">('International Invoice - %s' % (object.name)) or 'Invoice - %s' % (object.name)
        </field>
        <field name="paperformat_id" ref="sale_order_extend_report.paperformat_report_invoice_order"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>


