<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Sales Order Form View to Modify it -->
    <record id="view_order_moldeate_product_sum_form" model="ir.ui.view">
        <field name="name">moldeate.sale.order.product.sum.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

             <xpath expr="//group[@name='order_details']" position="inside">
                <field name="customer_type"/>
                <field name="product_count"/>
                <field name="total_cost"/>
                <field name="total_ref_amount"/>
            </xpath>

        </field>
    </record>

    <!-- Inherit Invoice Form View to Modify it -->
    <record id="view_move_moldeate_product_sum_form" model="ir.ui.view">
        <field name="name">moldeate.account.move.form.product.sum.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="product_count"/>
            </xpath>

        </field>
    </record>
</odoo>