<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fedex_delivery_carrier_configuration" model="ir.ui.view">
            <field name="name">Fedex Delivery Carrier Configuration</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='destination']" position='before'>
                    <page string="Fedex Configuration" name="fedex_configuration"
                          attrs="{'invisible': [('delivery_type', '!=', 'fedex_shipping_provider')]}">
                        <group>
                            <group>
                                <field name="company_id"
                                       attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}"/>
                                <field name="fedex_service_type"
                                       attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}"/>
                                <field name="fedex_droppoff_type"
                                       attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}"/>
                                <field name="fedex_weight_uom"
                                       attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}"/>
                                <field name="fedex_onerate"
                                       attrs="{'invisible': [('fedex_service_type','not in',['FIRST_OVERNIGHT','PRIORITY_OVERNIGHT','STANDARD_OVERNIGHT','FEDEX_2_DAY','FEDEX_2_DAY_AM','FEDEX_EXPRESS_SAVER'])]}"/>
                                <!--<field name="fedex_payment_type" />-->
                                <field name="is_cod"/>
                                <field name="fedex_collection_type" attrs="{'required': [('is_cod', '!=', 'False')]}"/>
                            </group>
                            <group>
                                <field name="fedex_default_product_packaging_id"
                                       attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}"
                                       domain="[('package_carrier_type', '=', 'fedex_shipping_provider')]"/>
                                <field name="fedex_shipping_label_stock_type"
                                       attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}"/>
                                <field name="fedex_shipping_label_file_type"
                                       attrs="{'required': [('delivery_type', '=', 'fedex_shipping_provider')]}"/>
                                <field name="fedex_third_party_account_number"/>
                                <field name="add_custom_margin"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>

    <data>
        <record id="stamps_deleivery_method_configuration" model="ir.ui.view">
            <field name="name">delivery.carrier.configuration</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='destination']" position='before'>
                    <page string="Stamps.com Configuration" name="stamps_configuration"
                          attrs="{'invisible': [('delivery_type', '!=', 'stamps')]}">
                        <group>
                            <group>
                                <field name="company_id"
                                       attrs="{'required': [('delivery_type', '=', 'stamps')]}"/>
                                <field name="stamps_packaging_id"
                                       attrs="{'required': [('delivery_type', '=', 'stamps')]}"/>
                                <field name="stamps_package_type"
                                       attrs="{'required': [('delivery_type', '=', 'stamps')]}"/>
                                <field name="stam_service_info" attrs="{'required': [('delivery_type', '=', 'stamps')]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
    <data>
        <record id="view_delivery_carrier_dhl_form_view_ept" model="ir.ui.view">
            <field name="name">delivery.carrier.DHL.form.view.ept</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='destination']" position='before'>
                    <page string="DHL Express Configuration" name="DHL_configuration"
                          attrs="{'invisible': [('delivery_type', '!=', 'dhl_express')]}">
                        <group>
                            <group>
                                <field name="company_id"></field>
                                <field name="dhl_service_type"
                                       attrs="{'required': [('delivery_type', '=', 'dhl_express')]}"/>
                                <field name="dhl_droppoff_type"
                                       attrs="{'required': [('delivery_type', '=', 'dhl_express')]}"/>
                                <field name="dhl_weight_uom"
                                       attrs="{'required': [('delivery_type', '=', 'dhl_express')]}"/>
                                <field name="dhl_dimension_unit" invisible="1"/>
                                <field name="dhl_default_product_packaging_id"
                                       attrs="{'required': [('delivery_type', '=', 'dhl_express')]}"
                                       domain="[('package_carrier_type', '=', 'dhl_express')]"
                                       context="{'default_package_carrier_type':'dhl_express'}"/>
                            </group>
                            <group>
                                <field name="dhl_shipping_label_type"
                                       attrs="{'required': [('delivery_type', '=', 'dhl_express')]}"/>
                                <field name="dhl_shipping_label_file_type"
                                       attrs="{'required': [('delivery_type', '=', 'dhl_express')]}"/>
                                <field name="dhl_is_dutiable"/>
                                <field name="dhl_duty_payment_type"
                                       attrs="{'invisible': [('dhl_is_dutiable', '=', False)],'required': [('dhl_is_dutiable', '=', True)]}"/>
                                <field name="dhl_region_code"
                                       attrs="{'required': [('delivery_type', '=', 'dhl_express')]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
