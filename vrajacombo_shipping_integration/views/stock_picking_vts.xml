<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fedex_view_stock_picking_package_details" model="ir.ui.view">
        <field name="name">Fedex Package Configuration</field>
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="create_return_order" string="FedEx Return" type="object"
                        attrs="{'invisible': ['|','|','|',('picking_type_code', '=', 'outgoing'),('state','in',('done','cancel')),('carrier_tracking_ref','!=',False),('carrier_id','=',False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="fedex_view_stock_quant_package_details" model="ir.ui.view">
        <field name="name">Fedex Package Configuration</field>
        <field name="model">stock.quant.package</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_quant_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="custom_tracking_number" readonly="1"/>
            </xpath>
        </field>
    </record>

<!--    stamps.com-->
    <record id="stamps_view_stock_picking_package_details" model="ir.ui.view">
        <field name="name">Stamps.com Label URL</field>
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="after">
                <field name="stamps_label_url" readonly="1" widget="url" attrs="{'invisible': [('delivery_type','!=','stamps')]}"/>
                <field name="stamps_tx_id" readonly="1" attrs="{'invisible': [('delivery_type','!=','stamps')]}"/>
            </xpath>
        </field>
    </record>
<!--    ups-->
    <data>
        <record id="view_stock_picking_form_view_ups" model="ir.ui.view">
            <field name="name">stock.picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
             <field name="arch" type="xml">
             <xpath expr="//header" position="inside">
             	<button name="create_ups_label" string="UPS label" type="object" attrs="{'invisible': ['|','|',('picking_type_code', '=', 'outgoing'),('state','in',('done','cancel')),('carrier_tracking_ref','!=',False)]}"/>
             </xpath>
            </field>
        </record>
    </data>
</odoo>

