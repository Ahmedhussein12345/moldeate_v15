<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vraja_combo_carrier_credential_configuration" model="ir.ui.view">
        <field name="name">Carrier Configuration</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Carrier Configuration">
                    <group>
                        <field name="use_fedex_shipping_provider"/>
                    </group>
                    <group attrs="{'invisible': [('use_fedex_shipping_provider', '!=', True)]}">
                        <field name="fedex_key"
                               attrs="{'required':[('use_fedex_shipping_provider','=',True)]}"/>
                        <field name="fedex_password"
                               attrs="{'required':[('use_fedex_shipping_provider','=',True)]}" password="True"/>
                        <field name="fedex_account_number"
                               attrs="{'required':[('use_fedex_shipping_provider','=',True)]}"/>
                        <field name="fedex_meter_number"
                               attrs="{'required':[('use_fedex_shipping_provider','=',True)]}"/>
                        <field name="fedex_integration_id"
                               attrs="{'required':[('use_fedex_shipping_provider','=',True)]}"/>
                    </group>
                    <group attrs="{'invisible': [('use_fedex_shipping_provider', '!=', True)]}">
                        <field name="use_address_validation_service"/>
                    </group>

                    <!--   Stamps.com view      -->
                    <group>
                        <field name="use_stamps_shipping_provider"/>
                    </group>
                    <group attrs="{'invisible': [('use_stamps_shipping_provider', '!=', True)]}">
                        <field name="stamps_user_name"
                               attrs="{'required':[('use_stamps_shipping_provider','=',True)]}"/>
                        <field name="stamps_password"
                               attrs="{'required':[('use_stamps_shipping_provider','=',True)]}" password="True"/>
                        <field name="stamps_integrator_id"
                               attrs="{'required':[('use_stamps_shipping_provider','=',True)]}" password="True"/>
                        <field name="stamps_api_url"
                               attrs="{'required':[('use_stamps_shipping_provider','=',True)]}"/>
                        <!--<field name="stamps_authenticator" attrs="{'invisible':[('stamps_authenticator','=',False)]}"/>-->
                    </group>

                    <!--   DHL Express View-->
                    <group>
                        <field name="use_dhl_express_shipping_provider"/>
                    </group>
                    <group attrs="{'invisible': [('use_dhl_express_shipping_provider', '!=', True)]}">
                        <field name="dhl_express_userid"
                               attrs="{'required':[('use_dhl_express_shipping_provider','=',True)]}"/>
                        <field name="dhl_express_password"
                               attrs="{'required':[('use_dhl_express_shipping_provider','=',True)]}"/>
                        <field name="dhl_express_account_number"
                               attrs="{'required':[('use_dhl_express_shipping_provider','=',True)]}" />
                    </group>

                    <!--GLS-->
                    <group>
                        <field name="use_gls_shipping_provider"/>
                    </group>
                    <group attrs="{'invisible': [('use_gls_shipping_provider', '!=', True)]}">
                        <field name="gls_user_id"
                               attrs="{'required':[('use_gls_shipping_provider','=',True)]}"/>
                        <field name="gls_password"
                               attrs="{'required':[('use_gls_shipping_provider','=',True)]}" />
                        <field name = "gls_contact_id"
                                attrs="{'required':[('use_gls_shipping_provider','=',True)]}" />
                        <field name="gls_api_url"
                               attrs="{'required':[('use_gls_shipping_provider','=',True)]}"/>
                        <field name="gls_tracking_url" />
                    </group>
<!--                    ups-->
                    <group>
                        <field name="use_ups_shipping_provider"/>
                    </group>
                    <group attrs="{'invisible': [('use_ups_shipping_provider', '!=', True)]}">
                        <field name="access_license_number"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}"/>
                        <field name="ups_userid"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}"/>
                        <field name="ups_password"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}" password="True"/>
                        <field name="ups_shipper_number"
                               attrs="{'required':[('use_ups_shipping_provider','=',True)]}"/>
                        <field name="check_recipient_address"/>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
    <record id="ups_view_stock_quant_package_details" model="ir.ui.view">
        <field name="name">UPS Package Configuration</field>
        <field name="model">stock.quant.package</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_quant_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="custom_ups_tracking_number" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>