<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.product</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="product.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='manage_volume_uom_setting']" position="replace">
                    <div class="o_setting_right_pane">
                        <label for="product_volume_volume_in_cubic_feet" string="Length"/>
                        <div class="text-muted">
                            Define your length unit of measure
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="product_volume_volume_in_cubic_feet" class="o_light_label" widget="radio" options="{'horizontal': true}"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>
