                        <table width="100%" class="table table-sm o_main_table">
                            <thead>
                                <tr style="background-color: #cccccc;">
                                    <th width="4%">
                                        <strong>Item</strong>
                                    </th>
                                    <th width="6%">
                                        <strong>Reference</strong>
